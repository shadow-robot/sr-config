<launch>
  <include file="$(find sr_logging_common)/launch/sr_rosbag_log.launch">
    <arg name="log_bag_prefix" value="sr_rhand"/>
  </include>
  <include file="$(find sr_robot_launch)/launch/srhand.launch">
    <arg name="eth_port" value="enp3s0" />
    <arg name="hand_serial" value="2106" />
    <arg name="hand_id" value="rh" />

    <arg name="robot_description" value="$(find sr_description)/robots/shadowhand_motor_btsp.urdf.xacro" />
    <arg name="mapping_path" value="$(find sr_edc_launch)/mappings/default_mappings/rh_E_v3.yaml"/>
    
    <arg name="use_moveit" value="true"/>
    <arg name="sim" value="false"/>
  </include>
  <node pkg="sr_utilities_common" type="timed_roslaunch.sh" name="launch_imu" args="10 $(find sr_ethercat_hand_config)/launch/sr_imu.launch"/>
</launch>
