<launch>
  <include file="$(find sr_robot_launch)/launch/srhand.launch">
    <arg name="eth_port" value="enp1s0" />
    <arg name="hand_serial" value="1850" />
    <arg name="hand_id" value="lh" />

    <arg name="robot_description" value="$(find sr_description)/robots/shadowhand_left_motor.urdf.xacro" />
    <arg name="mapping_path" value="$(find sr_edc_launch)/mappings/default_mappings/lh_E_v3.yaml"/>

    <arg name="hand_ctrl" value="false"/>
    <arg name="pwm_control" value="false"/>    
    <arg name="use_moveit" value="true"/>
    <arg name="sim" value="false"/>
  </include>
</launch>
